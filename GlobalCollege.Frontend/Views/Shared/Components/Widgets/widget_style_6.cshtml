@model GlobalCollege.Entity.ViewComponent.WidgetsViewComponentModel
@{
    Layout = "";

}

<!-- INSTITUTION & AFFILIATION -->
<section id="our-institutions">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="section-title">Our Institutions</h2>

                <div class="row">
                    @foreach (var item in Model.InstitutionList.OrderBy(x => x.PlacementOrder))
                    {
                        <div class="col-md-4 col-6">
                            <a href="/ContentManagement/InstitutionSetup/Details?Id=@item.Id">
                                <img src="@item.LogoLink" alt="institution">
                            </a>

                        </div>
                    }


                </div>
            </div>
            <div class="col-md-6">
                <div class="affilation_box">
                    <h2 class="section-title">
                        Our
                        Affiliations
                    </h2>

                    <p>
                        @Html.Raw(Model.AffiliationDescription)
                    </p>
                    <div class="branding__logo">
                        <ul>

                            @foreach (var item in Model.AffiliationList.OrderBy(x => x.PlacementOrder))
                            {
                                <li>
                                    <img src="@item.ThumbnailImageLink" alt="">
                                </li>
                            }


                        </ul>
                        <div class="d-flex">


                            <span class="text__button">
                                <a href="/ContentManagement/AffiliationSetup/Index">
                                    Explore More <i class="fas fa-angle-right" aria-hidden="true"></i>
                                </a>
                            </span>

                            <span class="text__button_gray">
                                <a href="/ContentManagement/CourseSetup/Index">
                                    Find Course <i class="fas fa-angle-right" aria-hidden="true"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- INSTITUTION & AFFILIATION -->
