@model GlobalCollege.Entity.ViewComponent.EventsViewComponentModel
@{
    Layout = "";

}

<!-- event style 1 -->
<section id="events-list">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-8">
                <ul class="nav nav-tabs" id="event-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="upcoming-tab" data-toggle="tab" href="#happening" role="tab" aria-controls="home" aria-selected="true">Happening</a>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#upcoming" role="tab" aria-controls="profile" aria-selected="false">Upcoming</a>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#expired" role="tab" aria-controls="contact" aria-selected="false">Expired</a>

                    </li>
                </ul>
                <div class="tab-content" id="event-content">
                    <div class="tab-pane fade show active" id="happening" role="tabpanel" aria-labelledby="home-tab">
                        @foreach (var _event in Model.EventList.OrderBy(x => x.PlacementOrder).Where(x => x.EventDate >= DateTime.Now.AddDays(-15) && x.EventDate <= DateTime.Now.AddDays(15)))
                        {
                            <div class="tab-content-wrap">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="event-date">
                                            <h2>@_event.EventDate.Day</h2>
                                            <span>@_event.EventDate.ToString("MMM")</span>

                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <a href="/ContentManagement/EventSetup/Details?Id=@_event.Id"> <h2 class="event-heading">@_event.Title</h2></a>

                                        <span class="time-venue">
                                            <i class="fa fa-clock" aria-hidden="true"></i> @_event.Time &nbsp;&nbsp;|&nbsp;&nbsp;
                                            <i class="fa fa-map-marker" aria-hidden="true"></i>@_event.Venue
                                        </span>
                                        <p>
                                            @Html.Raw(_event.ShortDescription)
                                        </p>
                                    </div>
                                    <div class="col-md-4">
                                        <img src="@_event.ThumbnailImageLink" class="w-100" alt="events">
                                    </div>
                                </div>
                            </div>
                        }


                    </div>
                    <div class="tab-pane fade" id="upcoming" role="tabpanel" aria-labelledby="profile-tab">
                        @foreach (var _event in Model.EventList.OrderBy(x => x.PlacementOrder).Where(x => x.EventDate > DateTime.Now.AddDays(15)))
                        {
                            <div class="tab-content-wrap">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="event-date">
                                            <h2>@_event.EventDate.Day</h2>
                                            <span>@_event.EventDate.ToString("MMM")</span>

                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <a href="/ContentManagement/EventSetup/Details?Id=@_event.Id"> <h2 class="event-heading">@_event.Title</h2></a>

                                        <span class="time-venue">
                                            <i class="fa fa-clock" aria-hidden="true"></i> @_event.Time &nbsp;&nbsp;|&nbsp;&nbsp;
                                            <i class="fa fa-map-marker" aria-hidden="true"></i>@_event.Venue
                                        </span>
                                        <p>
                                            @Html.Raw(_event.ShortDescription)
                                        </p>
                                    </div>
                                    <div class="col-md-4">
                                        <img src="@_event.ThumbnailImageLink" class="w-100" alt="events">
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="tab-pane fade" id="expired" role="tabpanel" aria-labelledby="contact-tab">
                        @foreach (var _event in Model.EventList.OrderBy(x => x.PlacementOrder).Where(x => x.EventDate < DateTime.Now.AddDays(-15)))
                        {
                            <div class="tab-content-wrap">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="event-date">
                                            <h2>@_event.EventDate.Day</h2>
                                            <span>@_event.EventDate.ToString("MMM")</span>

                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <a href="/ContentManagement/EventSetup/Details?Id=@_event.Id"> <h2 class="event-heading">@_event.Title</h2></a>

                                        <span class="time-venue">
                                            <i class="fa fa-clock" aria-hidden="true"></i> @_event.Time &nbsp;&nbsp;|&nbsp;&nbsp;
                                            <i class="fa fa-map-marker" aria-hidden="true"></i>@_event.Venue
                                        </span>
                                        <p>
                                            @Html.Raw(_event.ShortDescription)
                                        </p>
                                    </div>
                                    <div class="col-md-4">
                                        <img src="@_event.ThumbnailImageLink" class="w-100" alt="events">
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- event style 1 -->
