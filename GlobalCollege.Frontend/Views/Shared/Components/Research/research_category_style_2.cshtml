@model GlobalCollege.Entity.ViewComponent.ResearchViewComponentModel
@{
    Layout = "";
}

<div class="header_images _research-background">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="header_text-white">
                    <h2>Research Category</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<section id="courseList">
    <div class="container">
        <div class="get_start_carousel">
            <div class="row">
                @foreach (var item in Model.ResearchCategories.OrderBy(x => x.PlacementOrder))
                {
                    <div class="col-md-6 col-lg-4">
                        <a href="/ContentManagement/ResearchCategory/Details?Id=@item.Id">
                            <div class="getStart__wrapper wow bounceInUp" style="visibility: visible; animation-name: bounceInUp;">
                                <img src="@item.ThumbnailImageLink" alt="a-level">
                                <h5>@item.Title</h5>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>