@model BlogInformation
@{
    Layout = "";

}

<section id="shholar-columns" class="pb-5 mb-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="scholar-head">@Model.Title</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.blogs)
            {
                <div class="col-md-4">
                    <div class="schloar-block">
                        <h2 class="col-title">@item.Title</h2>
                        <p>
                            @Html.Raw(item.ShortDescription)
                        </p> <a href="@item.Link">
                            Read More <i class="fa fa-arrow-right"
                                         aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
            }

        </div>
    </div>
</section>


