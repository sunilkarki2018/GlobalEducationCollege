@model GlobalCollege.Entity.ViewComponent.CourseViewComponentModel
@{
    Layout = "";

}


<!-- PROGRAM CAROUSEL  -->
<section id="getStart">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-title">Our Courses</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="get_start_carousel owl-carousel">
                    @foreach (var item in Model.CourseList.OrderBy(x => x.PlacementOrder))
                    {
                        <div>
                            <a href="/ContentManagement/CourseSetup/Details?Id=@item.Id">
                                <div class="getStart__wrapper wow bounceInUp">
                                    <img src="@item.ThumbnailImageLink" alt="a-level">
                                    <h5>@item.Title</h5>
                                </div>
                            </a>

                        </div>
                    }

                </div>
            </div>
            <div class="col-md-12 text-center pt-5">
                <a href="/ContentManagement/CourseSetup/Index" class="btn btn-primary">
                    View All
                    Courses
                </a>

            </div>
        </div>
    </div>
</section>
<!-- PROGRAM CAROUSEL  -->
