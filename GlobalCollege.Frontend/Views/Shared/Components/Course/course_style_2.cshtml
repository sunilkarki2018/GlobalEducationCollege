@model GlobalCollege.Entity.ViewComponent.CourseViewComponentModel
@{
    Layout = "";

}

<div class="site-section">
    <div class="container">
        <div class="row mb-5 justify-content-center text-center">
            <div class="col-lg-6 mb-5">
                <h2 class="section-title-underline mb-3">
                    <span>Our Courses</span>
                </h2>
                <p>@Model.CourseDescription</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="our-school-course owl-slide owl-carousel">
                    @foreach (var item in Model.CourseList.OrderBy(x => x.PlacementOrder))
                    {
                        <div class="course-1-item">
                            <figure class="thumnail">
                                <a href="/ContentManagement/CourseSetup/Details?Id=@item.Id">
                                    <img src="@item.ThumbnailImageLink" alt="Image"
                                         class="img-fluid">
                                </a>

                            </figure>
                            <div class="course-1-content pb-4">
                                <h2>@item.Title</h2>

                                <p class="desc mb-4">
                                    @Html.Raw(item.ShortDescription)
                                </p>
                                <p>
                                    <a href="/ContentManagement/CourseSetup/Details?Id=@item.Id" class="btn btn-primary rounded-0 px-4">Learn More</a>
                                </p>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>


