@model GlobalCollege.Entity.ViewComponent.WhyusViewComponentModel
@{
    Layout = "";
}
<div class="institution3">
    <section class="school-page-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3 text-center section-heading Learn More">
                    <h2>Why Choose Enlight School?</h2>

                    <p class="lead">
                        @Model.Description
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">

                    @foreach (var item in Model.InstitutionAttributeList.OrderBy(x => x.PlacementOrder))
                    {
                        <div class="service left-icon Learn More">
                            <div class="icon">
                                <i class="icon-shield2"></i>
                            </div>
                            <div class="text">
                                <h3>@item.Title</h3>

                                <p>
                                    @Html.Raw(item.ShortDescription)
                                </p>
                            </div>
                        </div>
                    }

                </div>
                <div class="col-md-6">

                    @foreach (var item in Model.InstitutionAttributeList.OrderBy(x => x.PlacementOrder))
                    {
                        <div class="service left-icon Learn More">
                            <div class="icon">
                                <i class="icon-bookmarks2"></i>
                            </div>
                            <div class="text">
                                <h3>@item.Title</h3>

                                <p>
                                    @Html.Raw(item.ShortDescription)
                                </p>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <!-- END row -->
        </div>
    </section>
</div>

